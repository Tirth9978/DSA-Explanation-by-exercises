(1) Find The Lowest Value in an Array with a normal method


    --> Code :
            #include<iostream>
            using namespace std;
            
            int main(){
                int arr[] = {7,12,5,11,3};
                int min = arr[0] , i;
                cout << "Array is ";
                for (i=0;i<5;i++){
                    cout << arr[i] << "  " ;
                }
                for (i=0;i<5;i++){
                    if (min > arr[i]){
                        min = arr[i];
                    }
                }
                cout << endl;
                cout << "Lowest value is " << min ;
                return 0;
            }
    --> Time Complexity: O(n)



***************************************************************New**************************************************************************************



(2) Bubble Sort


    -->Code :
            #include<iostream>
            using namespace std;
            
            int main(){
                int arr[] = {7,12,5,11,3} , i,j;
                cout << "Array:";
                for (i=0;i<5;i++){
                    cout << arr[i] << "  ";
                }
                cout << endl;
                
                for (i= 0;i<4;i++){
                    for (j=0;j<5;j++){
                        if (arr[j] > arr[j+1]){
                            int a = 0;
                            a = arr[j];
                            arr[j] = arr[j+1];
                            arr[j+1] = a;
                        }
                    }
                }
                
                cout << "Lowest value is " << arr[0] ;
                return 0;
            }
    -->Time Complexity: O(n^2) 


*******************************************************NEW****************************************************************

(3) Selection Sort:
        
    --> Code : 
            #include<iostream>
            using namespace std;
            
            int main(){
                int n,i,j,k;
                cout << "Enter the size of an array:";
                cin >> n;
                int arr[n];
                for (i=0;i<n;i++){
                    cout << "Enter the number:";
                    cin >> arr[i];
                }
                cout << "Array :  ";
                for (i=0;i<n;i++){
                    cout << arr[i] << "  " ;
                }
                for (i=0;i<n-1;i++){
                    for (j=i+1;j<n;j++){
                        if (arr[i] > arr[j]){
                            int a = 0;
                            a = arr[i];
                            arr[i] = arr[j];
                            arr[j] = a;
                        }
                    }
                }
                cout << endl << "New array :  ";
                for (i=0;i<n;i++){
                    cout << arr[i] << "  " ;
                }
                return 0;
            }
            
